<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="examschd.controller.EditClassroomController"
      spacing="12"
      style="-fx-padding:18;">

    <Label text="Edit Classroom"
           style="-fx-font-size:16; -fx-font-weight:bold;"/>

    <TextField fx:id="nameField" promptText="Classroom Name"/>
    <TextField fx:id="capacityField" promptText="Capacity"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Save" onAction="#onSave"/>
    </HBox>
</VBox>
